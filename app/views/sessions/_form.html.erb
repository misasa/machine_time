<%= form_for [@machine, @session], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :global_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :global_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'OK', :class => 'btn btn-primary' %>
  </div>
<% end %>
