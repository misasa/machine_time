<%= form_for @machine, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :session_prefix, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :session_prefix, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :archiver_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :archiver_url, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'OK', :class => 'btn btn-primary' %>
    <% if @machine.id %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                machines_path, :class => 'btn' %>
    <% end %>
  </div>
<% end %>
