<%= render :partial => 'machine_header' %>

<%- model_class = Machine -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:session) %>
      </th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:started_at) %></th>
      <th><%= model_class.human_attribute_name(:stopped_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>      
    </tr>
  </thead>
  <tbody>
    <% @machine.sessions_finished.order(started_at: :desc).each do |session| %>
      <tr>
        <td><%= link_to session.name, machine_session_path(@machine, session) %> </td>
        <td><%= session.description %></td>
        <td><%= session.started_at %></td>
        <td><%= session.stopped_at %></td>
        <td>
          <% if @machine.archiver_url %>
          <%= link_to t('.data', :default => t("helpers.links.data")),
                      session.archiver_path, :class => 'btn btn-mini' %>
          <% end %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      machine_session_path(@machine, session),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>

      </tr>
    <% end %>
    <tfoot>
      <th>
      </th>
      <th></th>
      <th></th>
      <th></th>
      <th>
      <%= link_to t('.label', :default => t("helpers.links.label")),
              machine_sessions_path(@machine, :format => 'label'),
              :method => :get,
              :class => 'btn btn-mini' %>
      </th>
    </tfoot>
  </tbody>
</table>
