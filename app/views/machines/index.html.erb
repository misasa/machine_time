<%- model_class = Machine -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>            
    </tr>
  </thead>
  <tbody>
    <% @machines.each do |machine| %>
      <tr>
        <td><%= link_to machine.name, machine_path(machine) %></td>
        <td><%= machine.state %></td>
        <td>
          <%= link_to t('.start', :default => t("helpers.links.start")),
                      start_machine_path(machine),
                      :method => :put,
                      :class => 'btn btn-mini btn-primary' if machine.can_start? %>
          <%= link_to t('.stop', :default => t("helpers.links.stop")),
                      stop_machine_path(machine),
                      :method => :put,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => "Are you sure want to stop #{machine.name}?")) },
                      :class => 'btn btn-mini btn-danger' if machine.can_stop? %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_machine_path,
            :class => 'btn btn-primary' %>
